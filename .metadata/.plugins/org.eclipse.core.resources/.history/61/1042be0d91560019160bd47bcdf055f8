<?xml version="1.0" encoding="UTF-8"?>
<!--  -->
<configuration>
	<Loggers>
		<root level="info">
			<appenderRef ref="stdout" level="info"></appenderRef>
			<appenderRef ref="all" level="info"></appenderRef>
		</root>
	</Loggers>
	<Appenders>
		<Console name="stdout">
			<PatternLayout pattern="%d %p [%t]-->: %m%n"/>
		</Appenders>
		<RollingFile name="all" bufferedIO="true" fileName="log/all.log" filePattern="log/all.%i.log.gz">
			<PatternLayout pattern="%d{MM-dd HH:mm:ss} [%t] %-5level %logger{36}%n%m%n%n" />
			<Polices>
				<SizeBasedTriggeringPolicy size="1 MB"/>
			</Polices>
			<DefaultRolloverStrategy max="10"/>
		</RollingFile>
	</Appenders>
</configuration>